<%- include('../inc/top') %>
    <div class="row">
        <h2 style="text-align: center;margin-top: 0px;font-weight: bold;font-style: italic;">Delete User </h2>
        <div class="tab-content" style="margin-top: 0px;margin-bottom: 5px;">
            <div class="tab-pane fade show active" role="tabpanel">
                <div class="card">
                    <main>
                        <div class="container-fluid justify-content-center mt-1">
                            <div class="row justify-content-center">
                                <div class="col-8">
                                    <form class="needs-validation" action="" method="post">

                                        <div class="col-12">
                                            <label for="name">Name</label>
                                            <h2>
                                                <%= objUSer.name %>
                                            </h2>
                                        </div>
                                        <div class="col-12">
                                            <label for="content">content</label>
                                            <h2>
                                                <%= objUSer.content %>
                                            </h2>
                                        </div>
                                        <div class="col-12">
                                            <label for="country">Country</label>
                                            <h2>
                                                <%= objUSer.country %>
                                            </h2>
                                        </div>
                                        <div class="col-12">
                                            <label for="date">Date</label>
                                            <h2>
                                                <%= objUSer.date %>
                                            </h2>
                                        </div>
                                        <button onclick="myFunction()" class="w-100 btn btn-primary btn-lg"
                                            style="margin-top: 10px;" type="submit">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </main>
                    <div class="alert " style="text-align: center;color: red;" role="alert">
                        <%= msg %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            alert("Bạn đã xóa thành công");
        }
    </script>
    <%- include('../inc/bottom') %>