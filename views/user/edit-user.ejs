<%- include('../inc/top') %>
    <div class="row">
        <h2 style="text-align: center;margin-top: 0px;font-weight: bold;font-style: italic;">Sửa người dùng </h2>
        <div class="tab-content" style="margin-top: 0px;margin-bottom: 5px;">
            <div class="tab-pane fade show active" role="tabpanel">
                <div class="card">
                    <main>
                        <div class="container-fluid justify-content-center mt-1">
                            <div class="row justify-content-center">
                                <div class="col-8">
                                    <form class="needs-validation" action="" method="post">

                                        <div class="col-12">
                                            <label for="name" class="form-label">Name</label>
                                            <input type="text" class="form-control" name="name" placeholder="Tên SP"
                                                value="<%= objUSer.name %>" required>
                                            <div class="invalid-feedback">
                                                Valid full name is required..
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="content" class="form-label">content</label>
                                            <input type="text" class="form-control" name="content" placeholder="Content"
                                                value="<%= objUSer.content %>" required>
                                            <div class="invalid-feedback">
                                                Valid full name is required..
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="country" class="form-label">Country</label>
                                            <input type="text" class="form-control" name="country" placeholder="country"
                                            value="<%= objUSer.country %>" required>
                                        </div>
                                        <div class="col-12">
                                            <label for="date" class="form-label">Date</label>
                                            <input type="date" class="form-control" name="date" placeholder="date"
                                            value="<%= objUSer.date %>" required>
                                        </div>
                                        <button onclick="myFunction()" class="w-100 btn btn-primary btn-lg" style="margin-top: 10px;"
                                            type="submit">Update</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </main>
                    <div class="alert " style="text-align: center;color: red;" role="alert">
                        <%= msg %>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            alert("Bạn đã sửa thành công");
        }
    </script>
    <%- include('../inc/bottom') %>